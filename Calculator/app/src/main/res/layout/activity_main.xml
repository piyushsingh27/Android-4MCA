<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#bebebe">

    <EditText
        android:id="@+id/editText"
        android:backgroundTint="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/button1"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:layout_alignEnd="@+id/button4"
        android:layout_alignRight="@+id/button4"
        android:layout_marginTop="94dp"
        android:text="1"
        android:background="#000000"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/button2"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button1"
        android:layout_marginEnd="-1dp"
        android:layout_marginRight="-1dp"
        android:layout_toStartOf="@+id/button3"
        android:layout_toLeftOf="@+id/button3"
        android:background="#000000"
        android:text="2"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/button3"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button2"
        android:layout_centerHorizontal="true"
        android:text="3"
        android:background="#000000"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/button4"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:layout_toLeftOf="@+id/button2"
        android:text="4"
        android:background="#000000"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/button5"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignBottom="@+id/button4"
        android:layout_marginBottom="0dp"
        android:background="#000000"
        android:text="5"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/button6"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_alignLeft="@+id/button3"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:text="6"
        android:background="#000000"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/button7"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button4"
        android:layout_toLeftOf="@+id/button2"
        android:text="7"
        android:background="#000000"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/button8"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button5"
        android:layout_alignStart="@+id/button5"
        android:layout_alignLeft="@+id/button5"
        android:background="#000000"
        android:text="8"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/button9"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:layout_alignLeft="@+id/button6"
        android:text="9"
        android:background="#000000"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/buttonAdd"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button3"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignRight="@+id/editText"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/button3"
        android:text="+"
        android:background="#000000"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/buttonSubtract"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonAdd"
        android:layout_alignStart="@+id/buttonAdd"
        android:layout_alignLeft="@+id/buttonAdd"
        android:layout_alignEnd="@+id/buttonAdd"
        android:layout_alignRight="@+id/buttonAdd"
        android:text="-"
        android:background="#000000"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/buttonProduct"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonSubtract"
        android:layout_alignStart="@+id/buttonSubtract"
        android:layout_alignLeft="@+id/buttonSubtract"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:background="#000000"
        android:text="*"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/buttonDot"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="74dp"
        android:layout_height="72dp"
        android:layout_below="@+id/button7"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@+id/button2"
        android:background="#000000"
        android:text="."
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/button0"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="76dp"
        android:layout_height="139dp"
        android:layout_below="@+id/button8"
        android:layout_alignStart="@+id/button8"
        android:layout_alignLeft="@+id/button8"
        android:background="#000000"
        android:text="0"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/buttonClear"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="75dp"
        android:layout_height="137dp"
        android:layout_below="@+id/button9"
        android:layout_alignStart="@+id/button9"
        android:layout_alignLeft="@+id/button9"
        android:background="#000000"
        android:text="C"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/buttonDivision"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonProduct"
        android:layout_alignStart="@+id/buttonProduct"
        android:layout_alignLeft="@+id/buttonProduct"
        android:layout_alignEnd="@+id/buttonProduct"
        android:layout_alignRight="@+id/buttonProduct"
        android:text="/"
        android:background="#000000"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/buttonMod"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="145dp"
        android:layout_height="62dp"
        android:layout_below="@+id/buttonDivision"
        android:layout_alignStart="@+id/buttonDivision"
        android:layout_alignLeft="@+id/buttonDivision"
        android:layout_alignEnd="@+id/buttonDivision"
        android:layout_alignRight="@+id/buttonDivision"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginRight="-1dp"
        android:background="#000000"
        android:text="%"
        android:textColor="#ffffff" />


    <Button
        android:id="@+id/buttonEqual"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonDot"
        android:layout_alignStart="@+id/buttonDot"
        android:layout_alignLeft="@+id/buttonDot"
        android:layout_alignEnd="@+id/buttonClear"
        android:layout_alignRight="@+id/buttonClear"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:background="#000000"
        android:text="="
        android:textColor="#ffffff" />






